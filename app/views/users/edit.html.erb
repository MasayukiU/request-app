<%= render "shared/header"%>

<%= form_with model:@user, local: true do |f| %>
<div class="form-wrapper">
  <div class="form-wrapper_h1">
  <h1>アカウントの修正</h1>
  </div>
  <%#= render 'shared/error_messages', model: f.object %>
  <form>
    <div class="form-item">
      <label for="name"></label>
      <label class="form-text">お名前(全角)</label><span class="indispensable">必須</span>
    <%= f.text_field :name, id:"name", placeholder:"例) 経費 太郎", maxlength:"40" %>
    </div>
    <div class="form-item">
      <label for="name_kana"></label>
      <label class="form-text">お名前カナ(全角)</label>
    <%= f.text_field :name_kana, id:"name", placeholder:"例) ケイヒ タロウ", maxlength:"40" %>
    </div>
        <div class="form-item">
      <label class="form-text">役職</label>
      <label for="position_id"></label><span class="indispensable">役職者のみ必須</span>
    <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"select-box"}) %>
    </div>
    <div class="form-item">
      <label class="form-text">部署</label>
      <label for="position_id"></label>
    <%= f.collection_select(:team_id, Team.all, :id, :name, {}, {class:"select-box"}) %>
    </div>
    <div class="form-item">
      <label class="form-text">メールアドレス</label><span class="indispensable">必須</span>
      <label for="email"></label>
      <%= f.email_field :email, id:"email", placeholder:"Email Address", autofocus: true %>
    </div>
    <div class="form-item">
      <label class="form-text">パスワード</label><span class="indispensable">必須</span>
      <label for="password"></label>
      <%= f.password_field :password, id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-item">
      <label class="form-text">パスワード(確認)</label><span class="indispensable">必須</span>
      <label for="password_confirmation"></label>
    <%= f.password_field :password_confirmation, id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="button-panel">
      <%= f.submit "会員情報修正" , class:"button" %>
    </div>
  </form>
  <div class="form-footer">

  </div>
 </div> 
<% end %>
 
<%= render "shared/footer" %>